{
    "CN": "etcd",
    "hosts": [
        "localhost",
        "127.0.0.1",
        "::1",
        "::",
        {%- for host in groups['etcd_cluster'] -%}
        "{{host}}",
        {%- if etcd.interface != '' -%}
        "{{host}}"
        {%- else -%}
        "{{host}}"
        {%- endif -%}
        {%- if not loop.last%},{%endif%}
        {%endfor-%}
    ],
    "key": {
        "algo": "rsa",
        "size": 2048
    },
    "names": [
        {
            "C": "etcd server",
            "L": "etcd server",
            "ST": "etcd server"
        }
    ]
}

