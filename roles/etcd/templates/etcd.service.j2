[Unit]
Description=kubenetes etcd key-value store
Documentation=https://github.com/coreos/etcd
After=network.target

[Service]
User={{ app_user }}
Type=simple
Nice=-20
ExecStart=/usr/bin/ionice -c2 -n0 {{ etcd_dir_bin }}/etcd --config-file {{ etcd_dir_conf }}/etcd.conf
Restart=always
RestartSec=10s
LimitNOFILE=40000

[Install]
WantedBy=multi-user.target
